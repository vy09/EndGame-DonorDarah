<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.theme.FiturDonorDarah.MenuDonorDarah">


    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal Donor Darah"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Back5423" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="281dp"
        android:layout_height="46dp"
        android:background="@drawable/search"
        app:iconifiedByDefault="false"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout123"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        app:layout_constraintVertical_bias="0.117"
        app:queryHint="Search Here ...." />

    <ImageView
        android:layout_width="427dp"
        android:layout_height="190dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/imgv23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <FrameLayout
        android:id="@+id/frameLayout123"
        android:layout_width="0dp"
        android:layout_height="640dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/new_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPMIjabodetabek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            tools:listitem="@layout/pmi_jabodetabek_list" />


    </FrameLayout>

    <ImageView
        android:id="@+id/btn_Back5423"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout123"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048"
        app:srcCompat="@drawable/backhitam" />

</androidx.constraintlayout.widget.ConstraintLayout>