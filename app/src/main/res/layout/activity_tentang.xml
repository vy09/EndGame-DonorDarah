<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.theme.Profile.Tentang">

    <ImageView
        android:id="@+id/btnback"
        android:layout_width="58dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/backhitam" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:layout_marginTop="64dp"
        android:text="Tentang"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="133dp"
        android:layout_marginBottom="8dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@+id/textView22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_6" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="329dp"
        android:layout_height="59dp"
        android:text="BloodBags dibentuk sebagai solusi kebutuhan darah untuk membantu masyarakat menjalani gaya hidup lebih sehat sekaligus menyelamatkan orang lain."
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="292dp" />

    <TextView
        android:layout_width="329dp"
        android:layout_height="93dp"
        android:layout_marginTop="12dp"
        android:text="Kami percaya donor darah dapat dilakukan dengan mudah, dengan tempat dan waktu yang fleksibel. Aplikasi BloodBags dibuat untuk membantu masyarakat mengetahui jumlah stok darah, membantu masyarakat menemukan acara atau Unit Donor Darah terdekat dan memberikan pengingat rutin kepada para pendonor."
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        app:layout_constraintVertical_bias="0.009" />

</androidx.constraintlayout.widget.ConstraintLayout>