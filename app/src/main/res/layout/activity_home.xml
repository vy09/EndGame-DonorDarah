<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.theme.Home.Home">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="287dp"
        android:background="@drawable/v123"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="30dp"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="79dp"
            android:layout_height="91dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/img_9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="90dp"
            android:text="Halo Karina"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="120dp"
            android:text="(Isi nomor registrasi PMI)"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="90dp"
            android:text="Golongan Darah"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="315dp"
            android:layout_marginTop="120dp"
            android:text="AB+"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/pengaturan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/img_22" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/stok_darah"
        android:layout_width="119dp"
        android:layout_height="124dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/img_25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.835"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView19">

        <ImageView
            android:layout_width="94dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/img_26" />

        <ImageView
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/img_11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="85dp"
            android:text="Stok Darah"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/dnr_darah"
        android:layout_width="119dp"
        android:layout_height="124dp"

        android:layout_marginTop="60dp"
        android:background="@drawable/img_25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView19">

        <ImageView
            android:layout_width="94dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/img_26" />

        <ImageView
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/img_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="85dp"
            android:text="Donor Darah"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="315dp"
        android:layout_height="127dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/img_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>