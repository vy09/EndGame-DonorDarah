<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
    </style>

    <style name="input.FilledGrey">
        <item name="boxBackgroundColor">#F5F3F4</item>
    </style>

    <style name="btn" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">16sp</item>
<!--        <item name="android:fontFamily">@font/inter_black</item>-->
    </style>


    <style name="btn.White">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">#D0D0D0</item>
        <item name="strokeWidth">1dip</item>
    </style>

    //Google Button
    <style name="btn.White.Google">
        <item name="android:drawableLeft">@drawable/google</item>
    </style>
    //Facebook Button
    <style name="btn.White.Facebook">
        <item name="android:drawableLeft">@drawable/facebook</item>
    </style>

<!--    <style name="input.FilledGrey.user">-->
<!--        <item name="endIconMode">clear_text</item>-->
<!--    </style>-->
</resources>